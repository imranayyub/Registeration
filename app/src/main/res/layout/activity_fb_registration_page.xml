<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.example.anshul.fbRegistration.fbRegistrationPage">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="10pt"
        android:paddingTop="20pt">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Don't have an accout yet?Register Now.."
            android:textAlignment="center"
            android:textColor="#ffff" />


        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="16pt"
            android:layout_marginTop="6pt"
            android:hint="UserName"
            android:singleLine="true"
            android:textColor="#ffff"
            android:textColorHint="#c8e1ef" />


        <EditText
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="16pt"
            android:layout_marginTop="8pt"
            android:hint="Email"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffff"
            android:textColorHighlight="#c8e1ef"
            android:textColorHint="#c8e1ef" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="16pt"
            android:layout_marginTop="10pt"
            android:hint="Password"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffff"
            android:textColorHint="#c8e1ef" />

        <EditText
            android:id="@+id/userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginLeft="6pt"
            android:layout_marginRight="14pt"
            android:layout_marginTop="8pt"
            android:hint="Phone number"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#ffff"
            android:textColorHint="#c8e1ef" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="61dp">

            <TextView
                android:id="@+id/GenderTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8pt"
                android:layout_marginRight="16pt"
                android:layout_marginTop="20dp"
                android:text="I am:"
                android:textColor="#c8e1ef"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/Female_male_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male"
                    android:textColor="#c8e1ef" />

                <RadioButton
                    android:id="@+id/female_RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="#c8e1ef" />
            </RadioGroup>

        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="60pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Register"
        android:textColor="@color/colorPrimaryDark" />
</RelativeLayout>
